{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ES2022",
    "module": "ESNext",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "#root/*": ["./*"],
      "#src/*": ["./src/*"],
      "#api/*": ["./src/api/*"],
      "#config/*": ["./src/config/*"],
      "#database/*": ["./src/database/*"],
      "#middleware/*": ["./src/middleware/*"],
      "#models/*": ["./src/models/*"],
      "#storage/*": ["./src/storage/*"],
      "#utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*", "*.ts"]
}
